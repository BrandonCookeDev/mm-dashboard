{
  "name": "mm-dashboard",
  "description": "Dashboard bundle for MelbourneMelee broadcasts.",
  "version": "1.0.0",
  "contributors": [
    "Dom Hynes <contact@domhyn.es>"
  ],
  "dependencies": {
    "ajv": "^6.1.1",
    "lien": "^3.2.0",
    "moment": "^2.21.0",
    "node-fetch": "^2.0.0",
    "obs-websocket-js": "^1.1.0",
    "opn": "^5.3.0",
    "pouchdb": "^6.4.3",
    "pouchdb-find": "^6.4.3",
    "pouchdb-live-find": "^0.4.0",
    "shortid": "^2.2.8",
    "smashgg.js": "domhynes/smashgg.js",
    "twitter": "^1.7.1",
    "twitter-stream-api": "^0.5.2",
    "youtube-api": "^2.0.9",
    "ytdl-core": "^0.20.2"
  },
  "homepage": "https://domhyn.es",
  "license": "MIT",
  "nodecg": {
    "compatibleRange": "~0.9.0",
    "dashboardPanels": [
      {
        "name": "setinfo",
        "title": "Set Info",
        "file": "set-info.html",
        "fullbleed": true
      },
      {
        "name": "players",
        "title": "Players",
        "file": "generators.html",
        "fullbleed": true
      },
      {
        "name": "tournaments",
        "title": "Tournaments",
        "file": "tournament-info.html",
        "fullbleed": true
      },
      {
        "name": "sets",
        "title": "Sets",
        "file": "set-list.html",
        "fullbleed": true
      }
    ],
    "graphics": [
      {
        "file": "CoM/singles.html",
        "width": 1280,
        "height": 720
      },
      {
        "file": "CoM/commentators.html",
        "width": 1280,
        "height": 720
      }
    ],
    "assetCategories": [
      {
        "name": "sponsors",
        "title": "Sponsors",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      },
      {
        "name": "regions",
        "title": "Regions",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      }
    ],
    "repository": {
      "type": "git",
      "url": "git://github.com/DomHynes/mm-dashboard.git"
    }
  },
  "devDependencies": {
    "dotenv": "^5.0.0",
    "eslint": "^4.16.0",
    "eslint-config-xo": "^0.19.0",
    "eslint-plugin-html": "^4.0.2"
  },
  "scripts": {
    "lint": "eslint **/*.js **/*.html"
  }
}
