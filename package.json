{
  "name": "mm-dashboard",
  "description": "Dashboard bundle for MelbourneMelee broadcasts.",
  "version": "1.0.0",
  "contributors": [
    "Dom Hynes <contact@domhyn.es>"
  ],
  "dependencies": {
    "obs-websocket-js": "^1.1.0",
    "twitter-stream-api": "^0.5.2"
  },
  "homepage": "https://domhyn.es",
  "license": "MIT",
  "nodecg": {
    "compatibleRange": "~0.9.0",
    "dashboardPanels": [
      {
        "name": "setinfo",
        "title": "Set Info",
        "file": "set-info.html",
        "fullbleed": true
      },
      {
        "name": "generators",
        "title": "Generators",
        "file": "generators.html",
        "fullbleed": true
      }
    ],
    "graphics": [
      {
        "file": "CoM/singles.html",
        "width": 1280,
        "height": 720
      },
      {
        "file": "CoM/commentators.html",
        "width": 1280,
        "height": 720
      }
    ],
    "assetCategories": [
      {
        "name": "sponsors",
        "title": "Sponsors",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      },
      {
        "name": "regions",
        "title": "Regions",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      }
    ],
    "repository": {
      "type": "git",
      "url": "git://github.com/DomHynes/mm-dashboard.git"
    }
  },
  "devDependencies": {
    "eslint": "^4.16.0",
    "eslint-config-xo": "^0.19.0",
    "eslint-plugin-html": "^4.0.2"
  },
  "scripts": {
    "lint": "eslint **/*.js **/*.html"
  }
}
