{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"players": {
			"type" : "array",
      		"minItems": 2,
			"items" : {
				"type": "array",
				"minItems": 1,
				"items": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string",
							"default": "Player"
						},
						"characterIndex": {
							"type": "number",
							"default": 0
						},
						"colourIndex": {
							"type": "number",
							"default": 0
						},
						"sponsored": {
							"type": "boolean",
							"default": false
						}
					},
					"additionalProperties": false
				}
			}
		},
		"scores": {
			"type": "array",
			"minItems": 2,
			"items": {
				"type": "number",
				"default": 0
			}
		}

	}
}

